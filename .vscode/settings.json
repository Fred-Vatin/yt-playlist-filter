// <workspace>/.vscode/settings.json
{
	"biome.enabled": true,
	"biome.lsp.trace.server": "verbose",
	"biome.requireConfiguration": true,
	"biome.configurationPath": "./user script/biome.jsonc",
	"biome.suggestInstallingGlobally": false,
	"biome.lsp.bin": {
		"darwin-arm64": "./user script/node_modules/@biomejs/biome/bin/biome",

		"win32-x64": "./user script/node_modules/@biomejs/cli-win32-x64/biome.exe"
	},
	"[markdown]": {
		"editor.formatOnSave": false
	},
	"[html][css][json][jsonc][javascript][javascriptreact][typescript][typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"editor.formatOnSave": true
}
